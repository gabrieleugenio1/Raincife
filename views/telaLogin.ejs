                    <form action="/login-conta" method="post">
                        <div>
                            <label for="emailcel">Digite seu email ou n√∫mero de telefone:</label><br>
                            <input type="email" name="emailcel" id="emailcel">
                        </div>
                        <div>
                            <label for="senha">Digite sua senha:</label><br>
                            <input type="password" name="senha" id="senha">
                        </div>
                        <br>
                        <div class="login__forms___submit">
